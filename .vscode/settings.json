{
  "textlint.configPath": "/workspace/.textlintrc",
  "textlint.nodePath": "/workspace",
  "latex-workshop.linting.chktex.enabled": true,
  "latex-workshop.linting.chktex.exec.path": "chktex",
  "latex-workshop.latex.clean.subfolder.enabled": true,
  "latex-workshop.latex.autoClean.run": "onBuilt",
  "latex-workshop.intellisense.package.enabled": true,
  "editor.formatOnSave": true,
  "files.associations": {
    "*.tex": "latex"
  },
  "latex-workshop.latexindent.path": "latexindent",
  "latex-workshop.latexindent.args": [
    "-c",
    "%DIR%/",
    "%TMPFILE%",
    "-y=defaultIndent: '%INDENT%'"
  ],
  "latex-workshop.latex.clean.fileTypes": [
    "*.aux",
    "*.bbl",
    "*.blg",
    "*.idx",
    "*.ind",
    "*.lof",
    "*.lot",
    "*.out",
    "*.toc",
    "*.acn",
    "*.acr",
    "*.alg",
    "*.glg",
    "*.glo",
    "*.gls",
    "*.ist",
    "*.fls",
    "*.log",
    "*.fdb_latexmk",
    "*.snm",
    "*.nav",
    "*.dvi",
    "*.synctex.gz"
  ],
  "latex-workshop.latex.outDir": "out",
  "latex-workshop.latex.recipes": [
    {
      "name": "texliveonfly-latexmk",
      "tools": [
        "exportfig",
        "latexmk",
        "copybbl",
        "makediff",
        "latexmk-diff"
      ]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-r",
        "%WORKSPACE_FOLDER%/.latexmkrc",
        "-synctex=1",
        "-outdir=%OUTDIR%",
        "%DOC%"
      ]
    },
    {
      "name": "makediff",
      "command": "latexdiff-vc",
      "args": [
        "-e",
        "utf8",
        "--git",
        "--flatten",
        "--force",
        "-d",
        "%OUTDIR%/diff",
        "-r",
        "HEAD",
        "%DOCFILE_EXT%"
      ]
    },
    {
      "name": "copybbl",
      "command": "cp",
      "args": [
        "%OUTDIR%/main.bbl",
        "%WORKSPACE_FOLDER%/tex/main.bbl"
      ]
    },
    {
      "name": "latexmk-diff",
      "command": "latexmk",
      "args": [
        "-r",
        "%WORKSPACE_FOLDER%/.latexmkrc",
        "-synctex=1",
        "%OUTDIR%/diff/main"
      ]
    },
    {
      "name": "exportfig",
      "command": "python3",
      "args": [
        "%WORKSPACE_FOLDER%/script/generate_figures.py",
      ]
    }
  ]
}